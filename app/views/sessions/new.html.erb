<div class="container">
  <h2>Login</h2>

  <p>
    <%= @error if @error %>
  </p>

  <%= form_tag '/login' do %>

    <%= label_tag("Email:") %>
    <%= text_field_tag :email %>
    <%= label_tag("Password:") %>
    <%= password_field_tag :password %>
    <%= submit_tag "Submit" %>

  <% end %>
</div>
